<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/SettingsCardView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/settings__looknfeel__card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- KeyboardView preview will be inserted here programmatically -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODO: implement theme creation/selection" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Must be RelativeLayout, because it blocks RecyclerView to create a second scrollbar -->
    <RelativeLayout
        android:id="@+id/settings__looknfeel__frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
