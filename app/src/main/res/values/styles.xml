<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.AppCompat.Button.Borderless.CustomKey">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.AppCompat.Button.Borderless.CustomKey.Light">
        <item name="android:background">@drawable/key_bg_light</item>
    </style>

    <style name="CustomKeyboardStyle">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CustomKeyboardStyle.Light">
        <item name="android:background">@color/keyboardBackground_light</item>
    </style>

    <style name="CustomKeyboardStyleRow">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="justifyContent">center</item>
    </style>

</resources>
