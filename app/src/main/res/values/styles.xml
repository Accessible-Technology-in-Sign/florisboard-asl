<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.AppCompat.Button.Borderless.KeyView">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/shape_rect_rounded</item>
        <item name="android:backgroundTint">?attr/key_bgColor</item>
        <item name="android:drawableTint">?attr/key_fgColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/key_fgColor</item>
        <item name="android:textSize">@dimen/key_textSize</item>
    </style>

    <style name="KeyboardView">
        <item name="android:background">?attr/keyboard_bgColor</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="KeyboardRowView">
        <item name="flexDirection">row</item>
        <item name="justifyContent">center</item>
    </style>

    <style name="OneHandedPanel">
        <item name="android:layout_width">@dimen/one_handed_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">?attr/one_handed_bgColor</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OneHandedPanelButton">
        <item name="android:layout_width">@dimen/one_handed_button_width</item>
        <item name="android:layout_height">@dimen/one_handed_button_height</item>
        <item name="android:autoMirrored">true</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press</item>
        <item name="android:padding">0dp</item>
        <item name="android:tint">?attr/one_handed_button_fgColor</item>
    </style>

    <style name="SmartbarCandidate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/smartbar_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SmartbarContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SmartbarDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/smartbar_button_height</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">?attr/smartbar_divider_bgColor</item>
    </style>

    <style name="SmartbarQuickAction" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/smartbar_button_width</item>
        <item name="android:layout_height">@dimen/smartbar_button_height</item>
        <item name="android:layout_margin">@dimen/smartbar_button_margin</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:backgroundTint">?attr/smartbar_button_bgColor</item>
        <item name="android:padding">@dimen/smartbar_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?attr/smartbar_button_fgColor</item>
    </style>

    <style name="SmartbarQuickAction.Toggle">
        <item name="android:layout_weight">0</item>
        <item name="android:autoMirrored">true</item>
        <item name="android:drawableStart">@drawable/ic_keyboard_arrow_right</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">2.5dp</item>
        <item name="android:textOff" />
        <item name="android:textOn" />
    </style>

</resources>
