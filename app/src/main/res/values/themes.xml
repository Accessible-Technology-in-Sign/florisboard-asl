<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KeyboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="keyViewStyle">@style/Widget.AppCompat.Button.Borderless.KeyView</item>
        <item name="keyboardViewStyle">@style/KeyboardView</item>
        <item name="keyboardRowViewStyle">@style/KeyboardRowView</item>

        <item name="android:textColor">?attr/app_textColor</item>
    </style>

    <style name="KeyboardTheme.MaterialLight">>
        <item name="app_colorPrimary">@color/colorPrimary</item>
        <item name="app_colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="app_colorAccent">@color/colorAccent</item>
        <item name="app_colorAccentDark">@color/colorAccentDark</item>
        <item name="app_textColor">#000</item>

        <item name="key_bgColor">#fff</item>
        <item name="key_bgColorPressed">#f0f0f0</item>
        <item name="key_fgColor">#000</item>

        <item name="key_popup_bgColor">#efefef</item>
        <item name="key_popup_fgColor">#000</item>

        <item name="key_popup_extended_bgColor">#00000000</item>
        <item name="key_popup_extended_bgColorActive">#cecece</item>

        <item name="keyboard_bgColor">#dfdfdf</item>
    </style>

</resources>
